    $('#btnAddCredit').click(function () {
      $.ajax({
        type: "POST",
        url: '/users/AddCredits',
        data: {
          'NewAmount': $('#txtCredit').val()
        },
        dataType: 'json'
      }).done(function (data) {
        $('#spnAmount').text(data.amount + "â‚¹");
        $('#closeCreditModal').click();
        $('#txtCredit').val('');
      }).fail(function (data) {
        alert('fail');
      });
    });
